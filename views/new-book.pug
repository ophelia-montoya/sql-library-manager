extends layout

block content 
  h1= title
  form(method="post" action="/books/new") 
    if(errors)
      h2.errors Oooops! 
      ul.errors 
        each error in errors 
          li= error.message
    p 
      label(for="title") Title
      input(name="title" type="text" id="book.title" value=book.title) 
    p 
      label(for="author") Author
      input(name="author" type="text" id="book.author" value=book.author) 
    p 
      label(for="genre") Genre
      input(name="genre" type="text" id="book.genre" value=book.genre) 
    p 
      label(for="year") Year
      input(name="year" type="text" id="book.year" value=book.year)
    p 
      input(type="submit" value="Create New Book")
    p 
      a(class="button" href="/books") Cancel 